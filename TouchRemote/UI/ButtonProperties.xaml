<mac:MetroWindow x:Class="TouchRemote.UI.ButtonProperties"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:fa="http://schemas.fontawesome.io/icons/"
                 xmlns:mac="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:local="clr-namespace:TouchRemote"
                 xmlns:model="clr-namespace:TouchRemote.Model"
                 xmlns:uc="clr-namespace:TouchRemote.Utils.Converters"
                 mc:Ignorable="d"
                 x:ClassModifier="internal"
                 DataContext="{Binding RelativeSource={RelativeSource Self}}"
                 Title="Button Properties"
                 MinHeight="300" Height="300" MinWidth="400" Width="300"
                 ShowInTaskbar="False"
                 ShowMinButton="False"
                 ShowMaxRestoreButton="False"
                 ResizeMode="CanResizeWithGrip"
                 BorderBrush="{DynamicResource AccentColorBrush}"
                 BorderThickness="1">
    <mac:MetroWindow.Resources>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <uc:EnumerableNullReplaceConverter x:Key="enumerableNullReplaceConverter" />
        <uc:NullReplaceConverter x:Key="nullReplaceConverter" />
        <uc:ConfigHasPropertiesToVisibilityConverter x:Key="configHasPropertiesToVisibilityConverter" />
    </mac:MetroWindow.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical">
            <GroupBox Header="Appearance">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0">Icon</Label>
                    <Label Grid.Column="0" Grid.Row="1">Label</Label>
                    <ComboBox Grid.Column="1" Grid.Row="0" Margin="4" ItemsSource="{Binding Icons}" SelectedItem="{Binding Button.Icon}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="20" FontSize="18px"><fa:FontAwesome Icon="{Binding}" /></TextBlock>
                                    <TextBlock Margin="4,0,0,0" Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBox Grid.Column="1" Grid.Row="1" Margin="4" Text="{Binding Button.Label}" />
                </Grid>
            </GroupBox>
            <GroupBox Header="Behavior">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0">Click Action</Label>
                    <ComboBox Grid.Column="1" Grid.Row="0" Margin="4" ItemsSource="{Binding PluginManager.Actions, Converter={StaticResource enumerableNullReplaceConverter}, ConverterParameter='__NONE__'}" SelectedItem="{Binding Button.ClickAction, Converter={StaticResource nullReplaceConverter}, ConverterParameter='__NONE__'}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type model:IActionExecutableDescriptor}">
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} ({1})" FallbackValue="(None)">
                                            <Binding Path="Name" />
                                            <Binding Path="Plugin.Name" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Grid.Column="2" Grid.Row="0" Margin="4" VerticalAlignment="Center" Visibility="{Binding Button.ClickActionImpl, Converter={StaticResource configHasPropertiesToVisibilityConverter}}">
                        <Hyperlink Command="{Binding ClickConfigCommand}">Config</Hyperlink>
                    </TextBlock>
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</mac:MetroWindow>
